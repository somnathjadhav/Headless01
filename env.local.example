# WordPress API Configuration
WORDPRESS_API_URL=http://localhost:8000/graphql

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_WORDPRESS_URL=https://woo.local

# WooCommerce API Configuration
WOOCOMMERCE_CONSUMER_KEY=your-woocommerce-consumer-key-here
WOOCOMMERCE_CONSUMER_SECRET=your-woocommerce-consumer-secret-here

# Authentication (if needed)
JWT_SECRET=your-jwt-secret-here

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Analytics (optional)
GOOGLE_ANALYTICS_ID=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=Your Site Name

# ReCAPTCHA Configuration
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret-here
NEXT_PUBLIC_GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
