# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_WORDPRESS_URL=https://yourdomain.com/headless-woo
WORDPRESS_URL=https://yourdomain.com/headless-woo

# WooCommerce API
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret_here

# Database & Caching
REDIS_URL=redis://localhost:6379
DATABASE_URL=your_database_url_here

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://yourdomain.com

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# External Services
SENTRY_DSN=your_sentry_dsn_here
LOGGING_ENDPOINT=https://yourdomain.com/api/logs

# Performance
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
FACEBOOK_PIXEL_ID=your_fb_pixel_id_here

# CDN
CDN_URL=https://cdn.yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Cache TTL (in seconds)
CACHE_TTL_PRODUCTS=300
CACHE_TTL_CATEGORIES=600
CACHE_TTL_SEO=3600
